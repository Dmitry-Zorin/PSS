{
	"rewrites": [{ "source": "/api/(.*)", "destination": "/api/index" }],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "Referrer-Policy",
					"value": "strict-origin"
				},
				{
					"key": "Permissions-Policy",
					"value": "geolocation=(self), microphone=()"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "Content-Security-Policy",
					"value": "default-src 'self'"
				}
			]
		}
	]
}
