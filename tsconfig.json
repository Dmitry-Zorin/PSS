{
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
		"noEmit": true,
		"strict": true,
		"allowJs": true,
		"incremental": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "old"]
}
