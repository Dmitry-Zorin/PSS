{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ESNext",
		"outDir": "dist",
		"baseUrl": "src",
		"strict": true,
		"sourceMap": true,
		"incremental": true,
		"skipLibCheck": true,
		"removeComments": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": false
	}
}
