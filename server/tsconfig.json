{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"strict": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"@types",
			"node_modules/@types",
		]
	}
}
