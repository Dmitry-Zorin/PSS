{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"outDir": "dist",
		"baseUrl": ".",
		"strict": true,
		"sourceMap": true,
		"incremental": true,
		"skipLibCheck": true,
		"removeComments": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": false
	}
}
