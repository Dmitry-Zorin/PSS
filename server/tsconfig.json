{
	"compilerOptions": {
		"sourceRoot": "src",
		"outDir": "dist",
		"target": "ES2020",
		"module": "CommonJS",
		"strict": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"typeRoots": [
			"node_modules/@types",
			"@types",
		]
	},
	"watchOptions": {
		"excludeFiles": [ "**/*.test.ts" ]
	}
}
