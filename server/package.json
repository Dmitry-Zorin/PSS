{
	"name": "storage-system-server",
	"version": "2.0.0",
	"scripts": {
		"start": "rm -rf dist && tsc -p tsconfig.prod.json && npm run serve",
		"dev": "tsc-watch -p tsconfig.prod.json --onSuccess 'npm run serve'",
		"serve": "node -r dotenv/config -r source-map-support/register dist/index.js",
		"test": "jest"
	},
	"dependencies": {
		"bcrypt": "^5.0.1",
		"busboy": "^0.2.14",
		"chalk": "^3.0.0",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"express-unless": "^0.5.0",
		"helmet": "^4.6.0",
		"immutable": "^4.0.0-rc.14",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.21",
		"mongodb": "^4.1.0",
		"node-cron": "^3.0.0",
		"node-fetch": "^2.6.1",
		"ora": "^5.4.1",
		"source-map-support": "^0.5.19"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/busboy": "^0.2.4",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-unless": "^0.5.2",
		"@types/jest": "^26.0.24",
		"@types/jsonwebtoken": "^8.5.4",
		"@types/lodash": "^4.14.171",
		"@types/node-cron": "^2.0.4",
		"@types/node-fetch": "^2.5.11",
		"dotenv": "^10.0.0",
		"form-data": "^3.0.1",
		"jest": "^27.0.6",
		"jest-extended": "^0.11.5",
		"nock": "^13.1.0",
		"ts-jest": "^27.0.4",
		"tsc-watch": "^4.4.0",
		"typescript": "^4.3.5"
	},
	"jest": {
		"rootDir": "tests",
		"preset": "ts-jest",
		"slowTestThreshold": 15,
		"setupFiles": [
			"dotenv/config"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/setup.ts"
		],
		"globalTeardown": "<rootDir>/global-teardown.ts"
	}
}
